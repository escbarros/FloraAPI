generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id         String      @id @default(uuid())
  name       String
  email      String      @unique
  password   String
  created_at DateTime    @default(now())
  favorites  Favorites[]
  histories  History[]
}

model Words {
  id         String      @id @default(uuid())
  word       String      @unique
  created_at DateTime    @default(now())
  favorites  Favorites[]
  histories  History[]
}

model Favorites {
  id         String   @id @default(uuid())
  user_id    String
  word_id    String
  user       User     @relation(fields: [user_id], references: [id])
  word       Words    @relation(fields: [word_id], references: [id])
  created_at DateTime @default(now())
}

model History {
  id         String      @id @default(uuid())
  user_id    String
  word_id    String
  user       User        @relation(fields: [user_id], references: [id])
  word       Words       @relation(fields: [word_id], references: [id])
  created_at DateTime    @default(now())
}
